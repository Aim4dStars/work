#!/bin/bash

# This builds the base container to use for the nextgen docker deployments

set -e

docker run --rm -i -e WORK_DIR=$(pwd) -v $(pwd):$(pwd) docker.cloud.btfin-dev.com/tools/maven mvn  dependency:copy-dependencies

$(dirname ${0})/docker-build docker.cloud.btfin-dev.com/panorama/tomcat-base $(dirname ${0})/.. Dockerfile_base

