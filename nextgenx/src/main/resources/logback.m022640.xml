<included>

    <appender name="FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>./nextgen.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d{yyyy-MM-dd_HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
            </Pattern>
        </encoder>
        <triggeringPolicy
                class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>100MB</MaxFileSize>
        </triggeringPolicy>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>./nextgen-%d{yyyyMMdd}.log.zip</fileNamePattern>
            <maxHistory>1</maxHistory>
        </rollingPolicy>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>	<!-- STDOUT AUDIT PERF FILE -->
        <appender-ref ref="FILE" />
    </root>
    
    <logger name="com.bt.nextgen.core.jms.delegate.CacheEventMessageDelegate" level="DEBUG" />
    <logger name="com.bt.nextgen.core.jms.JmsDataHandlerCacheImpl" level="DEBUG" />

    <logger name="com.bt.nextgen.core.cache.GeneralEhCacheImpl" level="INFO"/>
    <logger name="com.bt.nextgen.core.cache.CacheMonitor" level="INFO"/>
    
    <logger name="com.bt.nextgen.core.cache.cachesearch.EhCacheLuceneSearcher" level="DEBUG"/>
    
    <logger name="com.bt.nextgen.service.avaloq.broker" level="INFO"/>
    
    <logger name="com.bt.nextgen.service.avaloq.asset.CacheManagedAvailableAssetIntegrationServiceImpl" level="INFO" />
    
    <logger name="com.bt.nextgen.service.avaloq.broker.CacheManagedUserBrokerIntegrationServiceImpl" level="INFO"/>
    
    <!-- ignore junk parsing messages -->
    <logger name="com.bt.nextgen.integration.xml.util.ParsingUtil" level="OFF" />
    <logger name="com.bt.nextgen.integration.xml.profiler.ParsingTracing" level="OFF" />
    
    <logger name="com.bt.nextgen.core.web.interceptor.CrossSiteReqForgeryFilter" level="DEBUG"/>
    <logger name="com.bt.nextgen.core.web.controllerGlobalElementPreparer" level="DEBUG"/>
    <logger name="com.bt.nextgen.api.draftaccount.service.ClientApplicationDtoConverterService" level="DEBUG"/>
    <logger name="com.bt.nextgen.api.draftaccount.service.ClientApplicationDetailsDtoConverterService" level="DEBUG"/>
    <logger name="com.bt.nextgen.api.draftaccount.service.ClientApplicationDetailsDtoFactory" level="DEBUG"/>
</included>