<included>

    <appender name="FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>./nextgen.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d{yyyy-MM-dd_HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
            </Pattern>
        </encoder>
        <triggeringPolicy
                class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>100MB</MaxFileSize>
        </triggeringPolicy>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>./nextgen-%d{yyyyMMdd}.log.zip</fileNamePattern>
            <maxHistory>1</maxHistory>
        </rollingPolicy>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <!--<appender-ref ref="AUDIT"/>-->
        <!--<appender-ref ref="PERF"/>-->
        <!--<appender-ref ref="FILE" />-->
    </root>
    <logger name="com.bt.nextgen.core.webservice.interceptor.ClientPayloadLoggingInterceptor" level="WARN"/>


    <logger name="org.apache.http" level="DEBUG"/>
    <logger name="com.bt.nextgen.integration.xml.parser" level="DEBUG"/>
    <!--<logger name="org.apache.http.impl.conn" level="DEBUG"/>-->
    <!--<logger name="org.apache.http.wire" level="DEBUG"/>-->

</included>