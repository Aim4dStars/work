<included>
    <appender name="CLIENT_PERF" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="ch.qos.logback.classic.boolex.OnMarkerEvaluator">
                <marker>CLIENT_PERF</marker>
            </evaluator>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <file>${logDir}/client_performance.log</file>
        <append>true</append>
        <encoder>
            <charset>UTF-8</charset>
            <Pattern>%date{yyyyMMdd HH:mm:ss.SSS} [${HOSTNAME}] [%X{trackingReference:-INTERNAL}] [%X{header.iv-user:-Unauthenticated}] [%X{container.sessionid:-NOSESSION}] %-5level %logger{36} - %msg%n</Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>./client_performance-%d{yyyyMMdd}.log.zip</fileNamePattern>
            <maxHistory>1</maxHistory>
        </rollingPolicy>
    </appender>

    <appender name="CLIENT_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="ch.qos.logback.classic.boolex.OnMarkerEvaluator">
                <marker>CLIENT_LOG</marker>
            </evaluator>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <file>${logDir}/client.log</file>
        <append>true</append>
        <encoder>
            <charset>UTF-8</charset>
            <Pattern>%date{yyyyMMdd HH:mm:ss.SSS} [${HOSTNAME}] [%X{trackingReference:-INTERNAL}] [%X{header.iv-user:-Unauthenticated}] [%X{container.sessionid:-NOSESSION}] %-5level %logger{36} - %msg%n</Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>./client-%d{yyyyMMdd}.log.zip</fileNamePattern>
            <maxHistory>1</maxHistory>
        </rollingPolicy>
    </appender>

    <logger name="org.apache.http.wire" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

</included>