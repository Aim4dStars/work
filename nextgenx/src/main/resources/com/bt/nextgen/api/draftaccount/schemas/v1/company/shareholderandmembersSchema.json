{
  "type": "object",
  "javaType" : "com.bt.nextgen.api.draftaccount.schemas.v1.company.ShareholderAndMembers",
  "properties": {
    "hasbeneficiaryclasses": {
      "$ref": "../base/answerTypeEnum.json",
      "description": "radio button option for BENEFICIARIES OF THE TRUST"
    },
    "beneficiaryclassdetails": {
      "type": "string",
      "description": "Textarea to provide details of the classes of trust beneficiaries limited to 255 chars",
      "pattern": "^.{0,255}$"
    },

    "isMajorShareholder": {
      "$ref": "../base/answerTypeEnum.json",
      "description": "radio button option for 'Does anyone own 25% or more of the company acting as trustee?'"
    },

    "needsShareholder": {
      "type": "boolean"
    },
    "needsMember": {
      "type": "boolean"
    },
    "needsTrustees": {
      "type": "boolean"
    },
    "needsBeneficiary": {
      "type": "boolean"
    },
    "needsBeneficialOwner": {
      "type": "boolean"
    },
    "needsControllerOfTrust": {
      "type": "boolean"
    },
    "accountType": {
      "type": "string",
      "TODO": "It can be removed from front end.Need to be analysed properly as removing this field is complex and require changes at many places."
    },

    "companysecretary": {
      "type": "string",
      "description": "Stores the director index for new corporate smsf account type where director has the CompanySecretary role (max. 4 directors allowed)",
      "pattern": "^$|[0-3]"
    },

    "investorsWithRoles": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "isBeneficialOwner": {
            "$ref": "../base/answerTypeEnum.json"
          },
          "isMember": {
            "$ref": "../base/answerTypeEnum.json"
          },
          "needsShareholder": {
            "type": "boolean"
          },
          "needsMember": {
            "type": "boolean"
          },
          "needsBeneficiary": {
            "type": "boolean"
          },
          "needsBeneficialOwner": {
            "type": "boolean"
          },
          "needsControllerOfTrust": {
            "type": "boolean"
          },
          "isMajorShareholder": {
            "$ref": "../base/answerTypeEnum.json"
          },
          "isShareholder": {
            "$ref": "../base/answerTypeEnum.json"
          },
          "isBeneficiary": {
            "$ref": "../base/answerTypeEnum.json"
          },
          "isControllerOfTrust": {
            "$ref": "../base/answerTypeEnum.json"
          },
          "role": {
            "$ref": "../base/investorRoleTypeEnum.json",
            "description": "using the Upper case values from investorRoleTypeEnum"
          }
        },
        "additionalProperties": false
      }
    },

    "additionalShareHoldersAndMembers": {
      "type": "array",
      "items": {
        "$ref" : "additionalshareholderandmemberSchema.json"
      }
    }
  },
  "additionalProperties": false
}