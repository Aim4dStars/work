<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!-- these properties control how the included changesets operate
    example below taken from Liquibase documentation
    http://www.liquibase.org/documentation/changelog_parameters.html

    -->
    <property name="clob.type" value="clob" dbms="oracle" />
    <property name="clob.type" value="longtext" dbms="mysql" />
    <!--
    allows us to support production installs where cash has already installed stuff
     but in dev we want a way to 'from scratch' setup a db
    -->
    <include file="persistence/db.changelog-cash.xml"/>

    <!--
    IP changes
    -->
    <include file="persistence/db.changelog-2.0.xml"/>
    
    <!--
    Option changes
    -->
    <include file="persistence/db.changelog-options.xml"/>
    
    <!-- Investment finder changes -->
    <include file="persistence/db.changelog-investmentfinder.xml"/>

</databaseChangeLog>