merge into TNC_REF tnc
using (select 'TAILORED_PORTFOLIOS' tnc_id,  
   		      1 version, 
   		      'Terms and conditions for access to the tailored portfolios portion of the panorama application' description,
   		      to_date('01-05-2016','dd-mm-yyyy') modify_datetime
       from dual) new_row
on (tnc.tnc_id = new_row.tnc_id
   and tnc.version = new_row.version
   )  		    
when matched then update set 
	tnc.description = new_row.description,
	tnc.modify_datetime = new_row.modify_datetime 
when not matched then insert (tnc_id, version, description, modify_datetime)
	values(new_row.tnc_id, new_row.version, new_row.description, new_row.modify_datetime);
	
   
